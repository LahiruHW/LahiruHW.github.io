{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "config": {
    "mark": {
      "invalid": null
    }
  },
  "data": {
    "url": "datasets/2019_modified.csv"
  },
  "hconcat": [
    {
      "title": "World Happiness Rankings (2019)",
      "projection": { "type": "equalEarth" },
      "width": 850,
      "height": 500,
      "layer": [
        {
          "data": {
            "url": "topoJSON/ne_110m_admin_0_countries.topojson",
            "format": {
              "type": "topojson",
              "feature": "ne_110m_admin_0_countries"
            }
          },
          "mark": {
            "type": "geoshape",
            "stroke": "black",
            "strokeWidth": 0.3
          },
          "transform": [
            {
              "lookup": "properties.NAME",
              "from": {
                "data": {
                  "url": "datasets/2019_modified.csv"
                },
                "key": "Country"
              },
              "as": "happiness"
            }
          ],
          "encoding": {
            "fill": {
              "field": "happiness.Happiness_Score",
              "type": "quantitative",
              "scale": {
                "domain": [2, 8],
                "scheme": "yellowgreenblue"
              },

              "legend": null,

              "condition": {
                "test": "datum['happiness.Happiness_Score'] === null",
                "value": "red"
              }
            },
            "tooltip": [
              {
                "title": "Country",
                "field": "happiness.Country",
                "type": "ordinal"
              },
              {
                "title": "Happiness Score",
                "field": "happiness.Happiness_Score",
                "type": "quantitative"
              },
              {
                "title": "Freedom",
                "field": "happiness.Freedom",
                "type": "quantitative"
              },
              {
                "title": "Economy (GDP per Capita)",
                "field": "happiness.Economy (GDP per Capita)",
                "type": "quantitative"
              },
              {
                "title": "Happiness Class",
                "field": "happiness.Happiness_Class"
              }
            ]
          }
        }
      ]
    },
    {
      "width": 500,
      "height": 500,
      "mark": "arc",
      "title": "Happiness Class Distribution",
      "transform": [
        {
          "aggregate": [ { "op": "count", "field": "value", "as": "count" } ],
          "groupby": ["Happiness_Class"]
        },
        {
          "calculate": "(datum.count / 156) * 100",
          "as": "percentage"
        }
      ],
      "encoding": {
        "theta": {
          "field": "count",
          "type": "quantitative"
        },
        "color": {
          "field": "Happiness_Class",
          "type": "ordinal",
          "scale": {
            "domain": [2, 3, 4, 5, 6, 7],
            "range": ["#a8ddb5", "#7bccc4", "#43a2ca", "#0868ac", "#0868ac", "#084081"]
          },
          "title": "Happiness Class"
        },
        "tooltip": [
          {
            "field": "Happiness_Class",
            "type": "ordinal",
            "title": "Happiness Class"
          },
          {
            "field": "count",
            "type": "quantitative",
            "title": "Number of Countries",
            "aggregate": "sum"
          },
          {
            "field": "percentage",
            "type": "quantitative",
            "title": "% of All Countries",
            "format": ".1f"
          }
        ] 
      }
    }
  ]
}
