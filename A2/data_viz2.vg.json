{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "config": {
    "mark": {
      "invalid": null
    }
  },
  "data": {
    "url": "https://raw.githubusercontent.com/LahiruHW/LahiruHW.github.io/main/Week%2010%20Submission/datasets/2019_modified.csv"
  },

  "title": "Average GDP per Capita of Each Happiness Class",
  "width": 850,
  "height": 500,
  "mark": {
    "type": "point",
    "filled": true,
    "size": 200
  },
  "transform": [
    {
      "aggregate": [
        { "op": "mean", "field": "Economy (GDP per Capita)", "as": "gdp_avg" }
      ],
      "groupby": ["Happiness_Class"]
    }
  ],
  "encoding": {
    "x": {
      "field": "Happiness_Class",
      "type": "ordinal",
      "axis": {
        "title": "Happiness Class"
      }
    },
    "y": {
      "field": "gdp_avg",
      "type": "quantitative",
      "aggregate": "mean",
      "axis": {
        "title": "Average GDP per Capita"
      }
    },
    "color": {
      "field": "Happiness_Class",
      "type": "ordinal",
      "scale": {
        "domain": [2, 3, 4, 5, 6, 7],
        "range": [
          "#a8ddb5",
          "#7bccc4",
          "#43a2ca",
          "#0868ac",
          "#0878ac",
          "#084081"
        ]
      },
      "legend": null
    },
    "tooltip": [
      {
        "field": "Happiness_Class",
        "type": "ordinal",
        "title": "Happiness Class"
      },
      {
        "field": "gdp_avg",
        "type": "quantitative",
        "title": "Average GDP per Capita",
        "format": ".2f"
      }
    ]
  }
}
