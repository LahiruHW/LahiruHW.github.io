{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": "World Happiness Rankings (2019)",
  "data": {
    "url": "2019.csv"
  },
  "projection": { "type": "equalEarth" },
  "layer": [
    {
      "data": {
        "url": "topoJSON/ne_110m_admin_0_countries.topojson",
        "format": { "type": "topojson", "feature": "ne_110m_admin_0_countries" }
      },
      "mark": { "type": "geoshape", "fill": "lightgray", "stroke": "white" }
    },
    {
      "data": {
        "url": "datasets/2019.csv"
      },
      "mark": {
        "type": "geoshape",
        "tooltip": true,
        "filled": true
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "topoJSON/ne_110m_admin_0_countries.topojson",
              "format": {
                "type": "topojson",
                "feature": "ne_110m_admin_0_countries"
              }
            },
            "key": "properties.NAME"
          },
          "as": "country"
        },
        {
          "calculate": "datum['Happiness Score']",
          "as": "colourValue"
        }
      ],

      "encoding": {
        "color": {
          "field": "colorValue",
          "type": "quantitative",
          "title": "Happiness Score",
          "scale": { "scheme": "bluegreen" }
        },
        "tooltip": [
          { "field": "Country", "type": "ordinal" },
          { "field": "Happiness Score", "type": "quantitative" }
        ]
      }
    }
  ]
}
